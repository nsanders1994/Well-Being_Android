<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sanders.natalie.well_being.Question2"
    android:background="#ff364cff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="    How are you \nfeeling right now?"
        android:id="@+id/txtHeader"
        android:textColor="#ffffffff"
        android:textSize="37dp"
        android:typeface="sans"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1.2  Stressed or Overwhelmed?"
        android:id="@+id/txtQ1.2"
        android:textColor="#ffffffff"
        android:typeface="sans"
        android:layout_below="@+id/txtHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:textSize="25.5dp" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/txtQ1.2"
        android:id="@+id/rdioGrpScale"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/bttnBack"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdio1"
            android:text="1 - not at all"
            android:checked="false"
            android:textColor="#ffffffff"
            android:textSize="25.5dp"
            android:typeface="sans" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdio2"
            android:text="2 - Very little"
            android:checked="false"
            android:textColor="#ffffffff"
            android:textSize="25.5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdio3"
            android:text="3 - Somewhat"
            android:checked="false"
            android:textColor="#ffffffff"
            android:textSize="25.5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdio4"
            android:text="4 - Quite a bit"
            android:checked="false"
            android:textColor="#ffffffff"
            android:textSize="25.5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdio5"
            android:text="5 - Extremely"
            android:checked="false"
            android:textColor="#ffffffff"
            android:textSize="25.5dp" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/bttnBack"
        android:textColor="#ffffffff"
        android:layout_toRightOf="@+id/bttnNext"
        android:layout_alignTop="@+id/bttnNext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:id="@+id/bttnNext"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
